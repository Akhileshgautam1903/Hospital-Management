@model List<DoctorDetails>
@{
    ViewData["Title"] = "CancelAppointment";
    Layout = "_UserLayout";
}

<h2>Cancel Appointment</h2>

@if (Model == null)
{
    <h3>No Slots to display</h3>
}
else
{
    <div class="card-container">
        @foreach (var doc in Model)
        {
            <div class="doc-card">
                <div>
                    <p class="special"><strong>Name : </strong> @doc.Name</p>
                    <p class="special"><strong>Phone Number : </strong> @doc.PhoneNumber</p>
                    <p class="special"><strong>Field : </strong> @doc.Field</p>
                    <p class="special"><strong>Appointment Date : </strong> @doc.Appointment_date </p>
                    <p class="special"><strong>Appointment Timings : </strong> <br /> @doc.App_Start_time - @doc.App_End_time </p>
                    <p class="special"><strong>Fees : </strong> @doc.Fees </p>
                    <button class="btn" onclick="cancelSlot(@doc.Id)">Cancel</button>
                </div>
                <img width="200px" src="~/images/Medical prescription-bro.svg" alt="pic" />
            </div>
            <script src="~/js/User/CancelAppointment.js" ></script>
        }
    </div>
}

